{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rollup",
      "type": "npm",
      "script": "start",
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^bundles",
          "endsPattern": "^created"
        }
      },
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
